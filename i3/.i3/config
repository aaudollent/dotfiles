# automatically start programs
exec --no-startup-id sh ~/.fehbg &
exec xterm -geometry 160x50 -name cmus -e cmus
exec xterm -geometry 160x50 -name mutt -e mutt
#exec xterm -geometry 160x50 -name task
#exec xterm -geometry 100x30 -name pad -e vim ~/.scratchpad
exec --no-startup-id i3-msg workspace 2-dev

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# i3lock
bindsym $mod+Escape exec amixer -q set Master mute && xbacklight -set 0 && i3lock -n -c 000000 && xbacklight -set 40
bindsym $mod+Shift+Escape exec amixer -q set Master mute && i3lock -n -u -i ~/.feh/bsod.jpg

# suspend
bindsym $mod+Delete exec systemctl suspend

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# control audio volume
bindsym XF86AudioLowerVolume exec amixer -q set Master 2- unmute
bindsym XF86AudioRaiseVolume exec amixer -q set Master 2+ unmute
bindsym XF86AudioMute exec amixer -q set Master toggle
bindsym $mod+c exec cmus-remote -u

# custom bindsyms
bindsym XF86Launch1 exec sudo systemctl restart openvpn@fdn
bindsym $mod+XF86Launch1 exec sudo systemctl stop openvpn@fdn

bindsym $mod+o exec firefox-developer-edition
bindsym $mod+Shift+o exec killall firefox-developer-edition

bindsym $mod+p exec xrandr --output VGA1 --mode 1680x1050 --left-of LVDS1 --output LVDS1 --primary && feh --bg-center ~/.wp
bindsym $mod+Shift+p exec xrandr --output LVDS1 --mode 1280x800 --pos 0x0 --primary --output VGA1 --off && feh --bg-center ~/.wp

bindsym $mod+i exec sudo netctl start static
bindsym $mod+Shift+i exec sudo netctl stop static

bindsym $mod+u exec sudo netctl start minitelfibre
bindsym $mod+Shift+u exec sudo netctl stop minitelfibre

bindsym $mod+b exec sudo mount /boot
bindsym $mod+Shift+b exec sudo umount /boot

bindsym $mod+q exec feh -F -Y ~/.feh/bsod.jpg

bindsym $mod+x exec feh -F -Y ~/.feh/vim-shortcuts.jpg

bindsym $mod+z exec oneko -rv
bindsym $mod+Shift+z exec pkill oneko

# control brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 5
bindsym XF86MonBrightnessUp exec xbacklight -inc 5

